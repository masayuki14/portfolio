<% provide(:title, "レストラン情報の編集") %>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@restaurant) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class = 'form-group'>
          <%= f.label :name %>　<span class="input-need">※必須</span>
          <%= f.text_field :name, class: 'form-control', id: 'restaurant_name' %>
        </div>
        <div class = 'form-group'>
          <%= f.label :description %>
          <%= f.text_field :description, size: "60x4", class: 'form-control', id: 'restaurant_description' %>
        </div>
        <%= f.submit "更新する", class: "btn btn-primary" %>
        <%= link_to "レストランを削除する", restaurant_path(@restaurant), method: :delete,
                             data: { confirm: "本当にこのレストランを削除してよろしいですか？" } %>
      <% end %>
    </div>
  </div>
</div>
