<% @restaurant = restaurant %>
<li id="restaurant-<%= restaurant.id %>">
  <div class="row">
    <div class="col-md-4">
      <span>
        <%= link_to((image_tag restaurant.picture.thumb200.url),
        restaurant_path(restaurant.id), class: 'restaurant-picture') if restaurant.picture.url.present? %>
      </span>
      <%= render 'users/favorite_form' %>
    </div>
    <div class="col-md-8 escape-float">
      <h3 class="name"><%= link_to restaurant.name,  restaurant_path(restaurant) %></h3>
      <div class="description"><%= restaurant.description %></div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="restaurant-created-at">
          <%= time_ago_in_words(restaurant.created_at) %>前に投稿
        </div>
      </div>
    </div>
  </div>
</li>
