<% user = User.find(notification.from_user_id) %>
<% restaurant = Restaurant.find(notification.restaurant_id) %>
<li id="notification-<%= notification.id %>">
  <div>
    <% if notification %>
      <p><%= notification.created_at.strftime("%Y/%m/%d(%a) %H:%M") %></p>
      <p class="notification-message"><%= link_to user.name, user_path(user) %>さんからコメントがあります。
      「<%= notification.content %>」</p>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-2">
      <%= link_to((image_tag restaurant.picture.url), restaurant_path(restaurant), class: 'restaurant-picture') %>
    </div>
    <div class="col-md-7">
      <p><%= link_to restaurant.name, restaurant_path(restaurant) %></p>
      <p><%= restaurant.description %></p>
    </div>
  </div>
</li>
